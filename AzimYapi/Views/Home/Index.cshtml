@model IEnumerable<AzimYapi.Models.UrunlerModel.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Ürünlerimiz</span>
                    </div>
                    <ul>
                        @foreach (var item in ViewBag.Kategoriler as IEnumerable<AzimYapi.Models.KategoriModel.Kategori>)
                        {
                            <li><a href="#">@item.KategoriAd</a></li>

                        }

                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div id="carosel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            int karoselsayac = 0;
                        }
                        @foreach (var item in ViewBag.KaroselGorseller as List<AzimYapi.Models.GorselModel.Gorsel>)
                        {
                            karoselsayac++;
                            if (karoselsayac == 1)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/resimler/karosel/@item.GorselAdi" alt="First slide" />
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/resimler/karosel/@item.GorselAdi" alt="First slide" />
                                </div>
                            }


                        }


                    </div>
                    <a class="carousel-control-prev" href="#carosel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Önceki</span>
                    </a>
                    <a class="carousel-control-next" href="#carosel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Sonraki</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
@if (ViewBag.sayac == 5)
{<div class="section-title">
        <h2>Çok Satanlar</h2>
    </div>
    <section class="categories">
        <div class="container">
            <div class="row">

                <div class="categories__slider owl-carousel">

                    @foreach (var item in ViewBag.EnCokSatanlar as List<AzimYapi.Models.UrunlerModel.Urun>)
                    {

                        <div class="col-lg-3">

                            <div class="categories__item set-bg" data-setbg="/resimler/@item.urunGorselAdi">
                                <h5><a href="#">@item.UrunAdi</a></h5>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>

}
<!-- Categories Section End -->
